doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/titleScreen.css")
        title Title Screen
    body 
        .main
            .title
                span S
                .card-artifact(red)
                    .card-upper A 
                    .card-body &hearts;
                    .card-lower A
                span t
                //- .card-artifact(black)
                //-     .card-upper A 
                //-     .card-body &spades;
                //-     .card-lower A
                span at
            .hero 
                .hero-element#create-room Create a Room
                .hero-element#join-room Join a Room
                if !loggedIn
                    .skeleton-hero-element 
                        a.mini-hero-element#sign-in(href="/signin") Sign in
                        a.mini-hero-element#sign-up(href="/signup") Sign up


            .footer &copy; vissan 2022

            .hero-join
                form(action="", id="group-join-form")
                    label#group-code-label(for="groupCode") 
                        span Room code: 
            
                    input(type="text", id="group-code", for="groupCode")

                    .button-wrapper
                        button#back-room(type="button").
                            Back

                        button#submit-room(type="submit").
                            Join room


            .title-join 
                .title-join-wrap 
                    span Join a room


            .wrapper
                .sign-in-board
                    if !loggedIn
                        .hublot
                        .sign-in-semantic Not signed in
                    if loggedIn
                        img.hublot(src=imgSrc)
                        .sign-in-semantic Signed in as #{userName}
                        a(href='/signout')
                            button#log-out-button Log out


            .hero-create
                .load-wrapper
                    | <div class="lds-spinner"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                    .load-text Creating room...

                button#back-room-2(type="button").
                    Cancel


            .title-create 
                .title-join-wrap 
                    span Create a room

    script(src="/titleScreen.js") 
